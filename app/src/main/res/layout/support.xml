<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportActivity">

    <!-- Main container for content + bottom nav -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollable Content Area -->
        <ScrollView
            android:id="@+id/supportScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView"
            android:padding="30dp"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Support"
                        android:textSize="18sp"
                        android:textColor="#1D1D1F"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/menu_black" />
                </LinearLayout>

                <!-- Account & Profile -->
                <LinearLayout
                    android:id="@+id/accBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/outline"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Account and profile"
                        android:textSize="16sp"
                        android:textColor="#636363"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="20dp" />
                </LinearLayout>

                <!-- My Goals -->
                <LinearLayout
                    android:id="@+id/privacyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/outline"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Goals"
                        android:textSize="16sp"
                        android:textColor="#636363"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="20dp" />
                </LinearLayout>

                <!-- FAQ Heading -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAQ's"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Delete Account -->
                <LinearLayout
                    android:id="@+id/deleteAccBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/outline"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Can I delete my account?"
                            android:textSize="16sp"
                            android:textColor="#636363"
                            android:layout_marginLeft="10dp" />

                        <ImageView
                            android:id="@+id/deleteArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="4dp"
                            android:src="@drawable/next_arrow"
                            android:layout_marginRight="20dp" />
                    </LinearLayout>

                    <!-- Hidden answer -->
                    <TextView
                        android:id="@+id/deleteAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No, you cannot delete your account permanently, but you can delete your savings goals if you want."
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Account"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:background="@drawable/rounded_button"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Update Details -->
                <LinearLayout
                    android:id="@+id/updateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/outline"
                    android:padding="14dp"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="How do I update my details?"
                            android:textSize="16sp"
                            android:textColor="#636363"
                            android:layout_marginLeft="10dp" />

                        <ImageView
                            android:id="@+id/updateArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="4dp"
                            android:src="@drawable/next_arrow"
                            android:layout_marginRight="20dp" />
                    </LinearLayout>

                    <!-- Hidden answer -->
                    <TextView
                        android:id="@+id/updateAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To update your details, go to User profile and click on the 'Edit profile'. You can change your name and phone number."
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />
                </LinearLayout>

                <!-- Need More Help -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="16dp"
                        android:src="@drawable/question_circle"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Need more help?"
                        android:textColor="#636363"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Support Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Contact Support"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_button"
                        android:layout_marginRight="16dp"
                        android:textSize="12sp"
                        android:padding="12dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/backToProfileBtn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Back to profile"
                        android:textAllCaps="false"
                        android:textColor="#636363"
                        android:background="@drawable/outline"
                        android:textSize="12sp"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#0B4CBA"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_bar" />
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/slide_in_drawer"
        app:headerLayout="@layout/nav_header"/>
</androidx.drawerlayout.widget.DrawerLayout>
