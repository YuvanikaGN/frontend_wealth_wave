<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@android:color/white"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Account"
                android:textSize="22sp"
                android:textColor="#1D1D1F"
                android:textStyle="bold"
                android:gravity="center" />


        </LinearLayout>

        <!-- Subtext -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create an account to begin managing your finances"
            android:textSize="14sp"
            android:textColor="#5C5C70"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <!-- Full Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name "
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <EditText
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:hint="Enter your full name"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"            android:padding="16dp"
            android:layout_marginBottom="26dp"
            android:textSize="14sp"
            android:elevation="4dp"
            android:layout_gravity="center"/>

        <!-- Email Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address "
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <EditText
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="Enter your email"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="26dp"
            android:textSize="14sp"
            android:elevation="4dp"/>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password "
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <EditText
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:hint="Create a password"
            android:layout_gravity="center"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginBottom="26dp"
            android:textSize="14sp"
            android:elevation="4dp"/>

        <!-- Mobile Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number "
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <EditText
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:hint="Enter mobile number"
            android:layout_gravity="center"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"            android:inputType="phone"
            android:padding="16dp"
            android:layout_marginBottom="50dp"
            android:textSize="14sp"
            android:elevation="4dp"/>

        <!-- Create Account Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Create Account"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#1A73E8"
            android:layout_marginBottom="18dp"
            android:elevation="4dp"/>

        <!-- OR separator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#ACACAF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or continue with"
                android:textColor="#ACACAF"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#ACACAF"/>
        </LinearLayout>

        <!-- Continue with Google -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/outline"
            android:layout_gravity="center"
            android:text="Continue with Google"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>


</LinearLayout>
