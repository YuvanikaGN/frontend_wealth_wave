<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SavingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">
    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Savings"
            android:textSize="18sp"
            android:textColor="#1D1D1F"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menu_black" />
    </LinearLayout>

    <!-- Monthly Savings Target Card -->
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_bg"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Savings Target"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularIndicator"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:indicatorColor="@color/blue"
                app:trackColor="#D3D3D3"
                android:progress="25"
                android:max="100"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of your remaining salary after expenses"
                    android:textColor="#6E6E6E"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.25,000"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adjustBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Adjust"
                android:textAllCaps="false"
                android:background="@drawable/outline"
                android:textColor="#2979FF"
                android:elevation="4dp"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#2979FF"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- EMI Section -->
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMI"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Currently having any EMI"
                android:textSize="14sp"
                android:gravity="end"
                android:textColor="#636363"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total amount"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:background="@drawable/outline"
            android:hint="Enter total amount"
            android:padding="12dp"
            android:textColorHint="#C1C1C1"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Value"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColorHint="#C1C1C1"
            android:hint="Enter monthly value to be paid"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Months Completed"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColorHint="#C1C1C1"
            android:hint="How many months of EMI completed"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:textAllCaps="false"
            android:text="Confirm"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#2979FF"
            android:textColor="@android:color/white" />
    </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/fragment_nav_blue"/>
</LinearLayout>
