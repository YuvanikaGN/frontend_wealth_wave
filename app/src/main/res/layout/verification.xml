<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".VerificationActivity">

    <!-- Main content in ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNote"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center_vertical">


            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <!-- Verifying Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifying Your Account..."
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait while we verify your bank account details"
                android:textSize="16sp"
                android:textColor="#808080"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <!-- Bank Details Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F2F2"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:clipToPadding="false"
                android:backgroundTint="#F2F2F7"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checking:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Bank Name"
                        android:textSize="16sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HDFC Bank"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Account Number"
                        android:textSize="16sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****0612"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="IFSC Code"
                        android:textSize="16sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HDFC0001234"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This usually takes a few seconds..."
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginBottom="12dp"/>

            <ProgressBar
                android:id="@+id/verificationProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="80dp"
                android:backgroundTint="#D3D3D3"
                android:progress="0"
                android:progressTint="@color/blue" />


        </LinearLayout>
    </ScrollView>

    <!-- Bottom fixed message -->
    <LinearLayout
        android:id="@+id/bottomNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/logo_security"
            android:contentDescription="Security Icon"
            android:tint="#808080"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your information is secure and encrypted"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</RelativeLayout>
