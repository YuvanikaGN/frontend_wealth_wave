<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomeActivity"
    app:menu="@menu/slide_in_drawer">

    <!-- Main Content Area -->
    <ScrollView
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Bar -->
            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Savings"
                    android:textSize="18sp"
                    android:textColor="#1D1D1F"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/menu_black" />
            </LinearLayout>

                <View
                    android:layout_below="@id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#DDD" />


            <!-- ScrollView for content -->
            <ScrollView
                android:id="@+id/scrollArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topBar"
                android:layout_marginBottom="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First Goal Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@drawable/outline"
                            android:elevation="8dp">

                            <TextView
                                android:text="New Car Fund"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Target: 50,000"
                                android:layout_marginTop="4dp"
                                android:textColor="#666"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="8dp"
                                    android:progress="75"
                                    android:max="100"
                                    android:progressTint="#2979FF"
                                    android:backgroundTint="#E0E0E0" />

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center"
                                    android:text="75%"
                                    android:textStyle="bold"
                                    android:textColor="#000"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Second Goal Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:elevation="8dp"
                            android:background="@drawable/outline">

                            <TextView
                                android:text="Camera"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Target: 70,000"
                                android:layout_marginTop="4dp"
                                android:textColor="#666"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="8dp"
                                    android:progress="55"
                                    android:max="100"
                                    android:progressTint="#2979FF"
                                    android:backgroundTint="#E0E0E0" />

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center"
                                    android:text="55%"
                                    android:textStyle="bold"
                                    android:textColor="#000"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Back to Profile Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_below="@id/scrollArea"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/backToProfileBtn"
                        android:textAllCaps="false"
                        android:elevation="8dp"
                        android:background="@drawable/rounded_button"
                        android:layout_width="348dp"
                        android:layout_height="wrap_content"
                        android:text="Back to profile"
                        android:layout_marginTop="30dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:padding="16dp" />


                </LinearLayout>
            </ScrollView>








        </LinearLayout>
    </ScrollView>
    <!-- Bottom Navigation -->
    <include layout="@layout/fragment_nav_blue"/>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/slide_in_drawer"
        app:headerLayout="@layout/nav_header"/>
</androidx.drawerlayout.widget.DrawerLayout>