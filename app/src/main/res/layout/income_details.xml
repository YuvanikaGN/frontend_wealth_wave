<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomeActivity">

    <!-- ================= MAIN CONTENT ================= -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <!-- Scrollable area (above bottom nav) -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView"
            android:fillViewport="true"
            android:padding="30dp">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ======= HEADER BAR ======= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Income Details"
                        android:textSize="18sp"
                        android:textColor="#1D1D1F"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/menu_black" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- ======= MONTHLY INCOME CARD ======= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:background="@drawable/logo_lineargrad"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Income"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 85,000"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/updateIncomeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/outline"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="Update income"
                        android:textAllCaps="false"
                        android:textColor="#1565C0"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- ======= ADD INCOME BUTTON ======= -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#2489F4"
                    android:text="Add income"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <!-- ======= ADDITIONAL INCOME SECTION ======= -->
                <LinearLayout
                    android:id="@+id/additionalIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/outline"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="30dp"
                    android:elevation="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Income"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Enter amount"
                        android:background="@drawable/outline"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:padding="12dp"
                        android:textColorHint="#B4B4B4"
                        android:elevation="4dp"/>

                    <!-- Add Income Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addIncome"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#2489F4"
                        android:padding="12dp"
                        android:text="Add income"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:elevation="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ======= FIXED BOTTOM NAVIGATION ======= -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#0B4CBA"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_bar"/>
    </RelativeLayout>

    <!-- ================= NAVIGATION DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/slide_in_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>
