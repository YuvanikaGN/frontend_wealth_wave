<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpActivity">

    <!-- Main Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView"
            android:fillViewport="true"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/main"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expenses"
                        android:textSize="18sp"
                        android:textColor="#1D1D1F"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/menu_black" />
                </LinearLayout>

                <!-- Toggle Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/incomeBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:background="@drawable/outline"
                        android:text="Income"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:textAllCaps="false" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/expenseBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:background="@drawable/rounded_button"
                        android:text="Expense"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:elevation="10dp" />
                </LinearLayout>

                <!-- Amount Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/logo_lineargrad"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <!-- Amount Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:layout_weight="1"/>

                            <EditText
                                android:id="@+id/etExpAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Rs. 0.00"
                                android:inputType="numberDecimal"
                                android:textSize="20sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>

                        <!-- Category -->
                        <EditText
                            android:id="@+id/etExpCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=" Category"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/salary"
                            android:background="#00FFFDFD"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:layout_marginBottom="5dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C4C4C4"
                            android:layout_marginBottom="10dp"/>

                        <!-- Payment Mode -->
                        <EditText
                            android:id="@+id/etExpMode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=" Payment mode (Bank/Cash)"
                            android:background="#00FFFDFD"
                            android:textSize="14sp"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:drawableStart="@drawable/ic_wallet"
                            android:layout_marginBottom="5dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C4C4C4"
                            android:layout_marginBottom="16dp"/>

                        <!-- Note -->
                        <EditText
                            android:id="@+id/etExpNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=" Write a note"
                            android:background="#00FFFDFD"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/script"
                            android:layout_marginBottom="5dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C4C4C4"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:background="@drawable/outline"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <!-- Transaction History -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction history"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:id="@+id/expenseHistory"                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </ScrollView>

        <!-- Fixed Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#0B4CBA"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_bar" />
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/slide_in_drawer"
        app:headerLayout="@layout/nav_header"/>
</androidx.drawerlayout.widget.DrawerLayout>
