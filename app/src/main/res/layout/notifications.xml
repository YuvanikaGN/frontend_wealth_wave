<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsActivity"
    app:menu="@menu/slide_in_drawer">

    <!-- Main Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/main"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/backArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="4dp"
                            android:src="@drawable/back_arrow" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notification Settings"
                            android:textSize="18sp"
                            android:textColor="#1D1D1F"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/menuIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/menu_black" />
                    </LinearLayout>

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminders"
                        android:textColor="#000000"
                        android:layout_marginBottom="6dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp" />

                    <!-- Notification Card 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/card_bg"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:elevation="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/reminders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily reminders"
                                android:textColor="#383838"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/subtitleText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get notified daily to check your savings"
                                android:textColor="#6B6B6B"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Switch
                            android:id="@+id/toggleSwitch2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp" />
                    </LinearLayout>


                    <View
                        android:layout_width="350dp"
                        android:layout_gravity="center"
                        android:layout_height="1dp"
                        android:background="#CEE2FF"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Savings"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="6dp"/>

                    <!-- Notification Card 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/card_bg"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:elevation="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment reminders"
                                android:textColor="#383838"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/subtitleText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get regular reminders to save"
                                android:textColor="#6B6B6B"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Switch
                            android:id="@+id/toggleSwitch3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#0B4CBA"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_bar" />
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/slide_in_drawer"
        app:headerLayout="@layout/nav_header"/>
</androidx.drawerlayout.widget.DrawerLayout>
