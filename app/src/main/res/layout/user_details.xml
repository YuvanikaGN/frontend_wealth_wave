<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Let's get to know your savings Plan"
                android:textSize="18sp"
                android:textColor="#1D1D1F"
                android:textStyle="bold"
                android:gravity="center" />


        </LinearLayout>


        <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Set up your personalized savings journey"
        android:textColor="#808080"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"/>

    <!-- Goal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Home"
            android:drawableTop="@drawable/user_home"
            android:background="@drawable/outline"
            android:textAllCaps="false"
            android:textColor="#0066FF"
            android:padding="5dp"
            android:textSize="9sp"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Vacation"
            android:background="@drawable/outline"
            android:padding="5dp"
            android:drawableTop="@drawable/user_vac"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="9sp"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Emergency"
            android:drawableTop="@drawable/user_emergency"
            android:background="@drawable/outline"
            android:padding="5dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="9sp"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Education"
            android:drawableTop="@drawable/user_edu"
            android:background="@drawable/outline"
            android:padding="5dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="9sp"/>

    </LinearLayout>

    <!-- Goal Name -->
    <EditText
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:hint="  What's your saving goal?"
        android:background="@drawable/outline"
        android:textColor="#000000"
        android:textColorHint="#A4A2A2"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"/>

    <!-- Target Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target amount"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:hint="  Enter target amount"
        android:background="@drawable/outline"
        android:textColor="#000000"
        android:textColorHint="#A4A2A2"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"/>

    <!-- Income -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:hint="  Enter your monthly income"
        android:layout_gravity="center"
        android:background="@drawable/outline"
        android:textColor="#000000"
        android:textColorHint="#A4A2A2"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"/>

    <!-- Duration -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:hint=" dd/mm/yyy"
        android:background="@drawable/outline"
        android:drawableEnd="@drawable/calendar"
        android:textColor="#000000"
        android:textColorHint="#A4A2A2"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"/>




    <!-- Duration Options -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="3\nmonths"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/outline"
            android:textColor="#0066FF"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="6\nmonths"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/outline"
            android:textColor="#000000"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="1\nyear"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/outline"
            android:textColor="#000000"/>

        <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="2\nyears"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/outline"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp">

        <!-- Risk Tolerance Options -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="Conservative"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Moderate"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:text="Aggressive"
            android:textStyle="bold"/>

    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginBottom="10dp" />


    <!-- Create Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createPlanBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create my plan"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>
