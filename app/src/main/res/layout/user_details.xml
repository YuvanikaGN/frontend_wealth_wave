<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Let's get to know your savings Plan"
                android:textSize="18sp"
                android:textColor="#1D1D1F"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Set up your personalized savings journey"
            android:textColor="#808080"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Goal Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/homeBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Home"
                android:drawableTop="@drawable/user_home"
                android:drawableTint="@color/black"
                android:background="@drawable/outline"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vacationBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Vacation"
                android:drawableTop="@drawable/user_vac"
                android:background="@drawable/outline"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/emergencyBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Emergency"
                android:drawableTop="@drawable/user_emergency"
                android:background="@drawable/outline"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <Space android:layout_width="6dp" android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/educationBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Education"
                android:drawableTop="@drawable/user_edu"
                android:background="@drawable/outline"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="10sp"/>
        </LinearLayout>

        <!-- Goal Name -->
        <EditText
            android:id="@+id/goalEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="  What's your saving goal?"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#A4A2A2"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <!-- Target Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target amount"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/targetAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:hint="  Enter target amount"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#A4A2A2"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <!-- Income -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/monthlyIncomeEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:hint="  Enter your monthly income"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:textColorHint="#A4A2A2"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <!-- Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/durationEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="  Select duration"
            android:background="@drawable/outline"
            android:drawableEnd="@drawable/calendar"
            android:textColor="#000000"
            android:textColorHint="#A4A2A2"
            android:textSize="14sp"
            android:padding="12dp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <!-- Create Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createPlanBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Create my plan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/logo_lineargrad"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</ScrollView>
